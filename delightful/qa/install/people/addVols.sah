                 "chkSkill[][3]",    "chkSkill[][4]", 
                 "Office skills", "People Skills");
                 
    addSkillsToVol(3, "Madam Secretary Betty Apple   (people ID 00003)", 
                 "chkSkill[][3]",    "chkSkill[][4]", 
                 "Office skills", "People Skills");

    signOut();
}



