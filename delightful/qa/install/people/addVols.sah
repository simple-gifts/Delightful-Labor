
function addVolSkillsToList($strSkillName){
    _click(_link("nb_admin_home"));
    _click(_link("Lists[1]"));
    _click(_link("Skills"));
    _click(_link("Add New Skills the Volunteer Possesses"));
    _setValue(_textbox("txtListItem"), $strSkillName);
    _click(_submit("Add New Skill"));
    _assertExists(_cell($strSkillName));
    _assert(_isVisible(_cell($strSkillName)));
}



