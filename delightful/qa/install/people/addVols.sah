function addSkillsToVol($lVolID, $strNameMatch, 
           $strSkillIDX_0, $strSkillIDX_1,
           $strSkill_0, $strSkill_1){
/*           
    _click(_link("nb_search_vol"));
    _setValue(_textbox("txtSearch1"), $lVolID);
    _click(_submit("Search"));
    _assertExists(_cell($strNameMatch));
*/    
    goToVolRec($lVolID, $strNameMatch);

    _click(_link("Edit Volunteer Skills"));
    _click(_checkbox($strSkillIDX_0));
    _click(_checkbox($strSkillIDX_1));
    _click(_submit("Update Skills"));
    _click(_image("plus.gif[2]"));
    
