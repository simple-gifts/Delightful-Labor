}





function createVolRecs($strLoginPath){
    _log("==> entering createVolRecs");
    setPathToDLTest($strLoginPath);
    logIn("admin", "admin");

    addVolSkillsToList("People Skills");
    addVolSkillsToList("Retail Sales");

    addVolunteer(1, "Mr. Abner P. Applegate (Ab)");
    addVolunteer(2, "Ms. Sandy A. Beach");
    addVolunteer(3, "Madam Secretary Betty Apple");
    addVolunteer(4, "Dr. Alice Archer");
    
    addSkillsToVol(1, "Mr. Abner P. Applegate (Ab) (people ID 00001)", 
                 "chkSkill[][0]",    "chkSkill[][2]", 
                 "Event management", "Landscaping");
                 
